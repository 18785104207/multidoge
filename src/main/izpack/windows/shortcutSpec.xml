<shortcuts> 
   <programGroup defaultName="MoonwAllet" location="applications"/> 
   <shortcut name="MoonwAllet ${project.version}" 
             target="$INSTALL_PATH/moonwallet.exe" 
             description="MoonwAllet" 
             workingDirectory="$INSTALL_PATH"
             iconFile="$INSTALL_PATH/moonwallet.ico" 
             initialState="normal" 
             programGroup="yes"
             desktop="yes" 
             applications="no" 
             startMenu="no" 
             startup="no">
    </shortcut>
    <shortcut name="Uninstall MoonwAllet ${project.version}" 
             target="$INSTALL_PATH/uninstaller/uninstaller.jar" 
             description="Uninstall MoonwAllet" 
             initialState="normal" 
             programGroup="yes"
             desktop="no" 
             applications="no" 
             startMenu="no" 
             startup="no">
    </shortcut>
</shortcuts>